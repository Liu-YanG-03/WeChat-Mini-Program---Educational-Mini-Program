/* pages/user/center/center.wxss */
/* 页面容器样式 */
.page-container {
  /* 设置页面背景为从 #0D47A1 到 #5B21B6 的线性渐变，形成蓝紫色背景效果 */
  background: linear-gradient(to bottom, #0D47A1, #5B21B6); 
  /* 确保页面容器的最小高度为视口高度，保证背景能覆盖整个可视区域 */
  min-height: 100vh;
  /* 在页面底部添加内边距，为底部导航栏留出空间，避免内容被遮挡 */
  padding-bottom: 120rpx; 
  /* 保证背景覆盖整个区域，使用 Flexbox 布局，子元素垂直排列 */
  display: flex;
  flex-direction: column;
}

/* 用户信息区域样式 */
.user-info {
  /* 设置用户信息区域的背景为半透明白色，rgba 中的 0.8 表示透明度 */
  background: rgba(255, 255, 255, 0.8); 
  /* 为用户信息区域添加内边距，使内容与边框有一定间隔 */
  padding: 40rpx 32rpx;
  /* 使用 Flexbox 布局，让子元素水平排列并垂直居中对齐 */
  display: flex;
  align-items: center;
  /* 设置子元素之间的间距为 32rpx */
  gap: 32rpx;
  /* 为用户信息区域添加外边距，左右外边距为 30rpx */
  margin: 30rpx; 
  /* 增加用户信息区域距离屏幕顶部的外边距为 60rpx */
  margin-top: 60rpx; 
  /* 设置用户信息区域距离下方元素的外边距为 10rpx */
  margin-bottom: 10rpx;
  /* 为用户信息区域添加圆角边框，使区域边缘更圆润 */
  border-radius: 20rpx; 
  /* 为用户信息区域添加阴影效果，模拟浮空的视觉感受 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15); 
}

/* 通用的板块区域样式 */
.section {
  /* 设置板块区域的背景为半透明白色，rgba 中的 0.8 表示透明度 */
  background: rgba(255, 255, 255, 0.8); 
  /* 为板块区域添加内边距，使内容与边框有一定间隔 */
  padding: 32rpx;
  /* 为板块区域添加外边距，左右外边距为 30rpx */
  margin: 30rpx; 
  /* 设置板块区域距离下方元素的外边距为 10rpx */
  margin-bottom: 10rpx;
  /* 为板块区域添加圆角边框，使区域边缘更圆润 */
  border-radius: 20rpx; 
  /* 为板块区域添加阴影效果，模拟浮空的视觉感受 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15); 
}

/* 用户头像样式 */
.user-avatar {
  /* 设置用户头像的宽度为 120rpx */
  width: 120rpx;
  /* 设置用户头像的高度为 120rpx */
  height: 120rpx;
  /* 将用户头像设置为圆形，通过 50% 的圆角实现 */
  border-radius: 50%;
}

/* 用户描述区域样式 */
.user-desc {
  /* 让用户描述区域在 Flexbox 布局中占据剩余的可用空间 */
  flex: 1;
}

/* 用户姓名样式 */
.user-name {
  /* 设置用户姓名的字体大小为 32rpx */
  font-size: 32rpx;
  /* 设置用户姓名的字体粗细为 500，中等粗细 */
  font-weight: 500;
  /* 设置用户姓名的字体颜色为深灰色 */
  color: #222;
  /* 在用户姓名下方添加 8rpx 的外边距，分隔与下方内容 */
  margin-bottom: 8rpx;
}

/* 用户邮箱样式 */
.user-email {
  /* 设置用户邮箱的字体大小为 24rpx */
  font-size: 24rpx;
  /* 设置用户邮箱的字体颜色为浅灰色 */
  color: #666;
}

/* 退出登录按钮样式 */
.logout-btn {
  /* 设置退出登录按钮的字体大小为 24rpx */
  font-size: 24rpx;
  /* 设置退出登录按钮的字体颜色为蓝色 */
  color: #409eff;
  /* 为退出登录按钮添加蓝色边框，边框宽度为 1rpx */
  border: 1rpx solid #409eff;
  /* 为退出登录按钮添加圆角边框，使按钮边缘更圆润 */
  border-radius: 10rpx;
  /* 为退出登录按钮添加内边距，使文字与边框有一定间隔 */
  padding: 10rpx 20rpx;
}

