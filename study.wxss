.container {
  padding-bottom: 100rpx;
}

/*控制顶端图片显示的范围*/
.course-cover {
  width: 100%;
  height: 600rpx;
}

/*控制价格区域的高度*/
.course-info {
  padding: 30rpx;
  padding-bottom: 110rpx;
}

.course-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.course-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #666;
}

.course-stats {
  display: flex;
  gap: 30rpx;
  margin-bottom: 25rpx;
}

.stats-item {
  font-size: 26rpx;
  color: #999;
}

.price-wrap {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.price {
  font-size: 40rpx;
  color: #f5222d;
  font-weight: bold;
}

/* 自定义收藏图标样式 */
.custom-collect-icon {
  position: absolute; /* 使用绝对定位 */
  top: 650rpx; /* 距离顶部的距离，可自定义 */
  right: 40rpx; /* 距离右侧的距离，可自定义 */
  width: 60rpx; /* 图标的宽度，可自定义 */
  height: 60rpx; /* 图标的高度，可自定义 */
}

.custom-collect-icon image {
  width: 100%; /* 图片宽度填充容器 */
  height: 100%; /* 图片高度填充容器 */
  object-fit: contain; /* 确保图片完整显示 */
}

/* 修改后的 buy-btn-custom 样式 */
.buy-btn-custom {
  position: absolute;
  left: 50%; /* 先将元素左侧边缘置于父容器中心 */
  transform: translateX(-50%); /* 再向左移动自身宽度的一半 */
  bottom: 530rpx; /* 距离底部的距离 */
  width: 280rpx; /* 自定义宽度 */
  height: 80rpx; /* 自定义高度 */
  line-height: 80rpx; /* 确保文字垂直居中 */
  border-radius: 40rpx; /* 保持圆角 */
  font-size: 32rpx; /* 自定义文字大小 */
  background-color: #6a5acd; /* 保持原有颜色 */
  color: white; /* 文字颜色 */
  border: none; /* 移除默认边框 */
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1); /* 添加阴影 */
}

.section {
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.section-content {
  font-size: 28rpx;
  line-height: 1.5;
  color: #666;
}

.teacher-info {
  display: flex;
  align-items: center;
  gap: 25rpx;
}

/* 添加自定义样式类 */
.teacher-avatar-custom {
  width: 110rpx; /* 自定义宽度 */
  height: 100rpx; /* 自定义高度 */
  margin-left: 20rpx; /* 自定义左边距 */
  margin-top: 20rpx; /* 自定义上边距 */
  border-radius: 1%; /* 保持圆形 */
}

.teacher-name {
  font-size: 30rpx;
  font-weight: bold;
}

.teacher-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.teacher-desc {
  font-size: 26rpx;
  color: #888;
  line-height: 1.4;
}

.outline-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.outline-title {
  font-size: 28rpx;
}

.outline-time {
  font-size: 24rpx;
  color: #999;
}