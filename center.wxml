<!-- pages/user/center.wxml -->
<view class="page-container">
  <!-- 用户信息 -->
  <view class="user-info">
    <image class="user-avatar" src="{{user.avatar}}" mode="aspectFill" />
    <view class="user-desc">
      <text class="user-name">{{user.name}}</text>
      <text class="user-email">{{user.email}}</text>
    </view>
    <button class="logout-btn" bindtap="onLogout">退出登录</button>
  </view>

<!-- 收藏课程 -->
<view class="section">
    <view class="section-header">
      <text class="section-title">我的收藏</text>
      <navigator url="/pages/course/collected-list" class="more-text">查看更多></navigator>
    </view>
  </view>


  <!-- 学习记录 -->
  <view class="section" style="height: 449rpx; display: block; box-sizing: border-box">
    <text class="section-title">学习记录</text>
    <block wx:for="{{studyRecords}}" wx:key="id">
      <view class="record-item" style="position: relative; left: 0rpx; top: 14rpx">
        <text class="record-title">{{item.title}}</text>
        <text class="record-time">{{item.time}}</text>
      </view>
    </block>
  </view>

  
</view>